#include <iostream>
using namespace std;

int main()
{
   int n;
   cout<<"Enter the value"<<endl;
   cin>>n;
   for(int r=1;r<=n;r++){
       for(int space=1;space<=n-r;space++){
           cout<<" ";
       }
       for(int star=1;star<=r;star++){
           cout<<"*";
       }
       cout<<endl;
   }

    return 0;
}
