#include <iostream>
using namespace std;
int main()
{
   int n;
   cout<<"Enter the number"<<endl;
   cin>>n;
   for(int r=1;r<=n;r++){
       for(int sp=1;sp<=r-1;sp++){
           cout<<" ";
       }
       for(int c=1;c<=n+1-r;c++){
           cout<<r+c-1;
       }
       cout<<endl;
   }

    return 0;
}
